{
    "preset": "per",
    "rules": {
        "declare_strict_types": true,
        "strict_param": true,
        "phpdoc_line_span": {
            "const": "single",
            "method": "single",
            "property": "single"
        },
        "phpdoc_single_line_var_spacing": true,
        "phpdoc_var_without_name": true,
        "function_declaration": {
            "closure_function_spacing": "one",
            "closure_fn_spacing": "one"
        }
    }
}
